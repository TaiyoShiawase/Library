<h2 class="page-header"><%= book.title %></h2>
<img src="<%= book.coverImagePath %>" width="100" height="150" alt="">
<div>
    Author: <%= book.author.name %>
</div>
<div>
    Published Date: <%= book.publishedDate.toDateString() %>
</div>
<div>
    Page Count: <%= book.pageCount %>
</div>
<div>
    Description: <%= book.description %>
</div>

<div class="form-row btn-row">
    <a class="btn btn-primary" href="/books/<%= book.id %>/edit">Edit</a>
    <%- include('../partials/deleteForm', { url: `/books/${book.id}` }) %>
    <a class="btn btn-primary" href="/authors/<%= book.author.id %>">View Author</a>
</div>
