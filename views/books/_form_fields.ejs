<div>
    <label for="">Title</label>
    <input type="text" name="title" placeholder="Enter here" value="<%= book.title %>">
</div>

<div>
    <label for="">Author</label>
    <select name="author" id="">
        <% authors.forEach(author => { %>
            <% if(author.id === book.author){ %>
                <option selected label="<%= author.name %>" value="<%= author.id %>">
            <% }else{ %>
                <option label="<%= author.name %>" value="<%= author.id %>"></option>
            <% } %>    
        <% }) %>
    </select>
</div>

<div>
    <label for="">Published Date</label>
    <input type="date" name="publishedDate"  value="<%= book.publishedDate == null ? '' : book.publishedDate.toISOString().split('T')[0] %>">
</div>

<div>
    <label for="">Page Count</label>
    <input type="number" name="pageCount" min="1" value="<%= book.pageCount %>">
</div>

<div>
    <label for="">Cover</label>
    <input type="file" name="cover" class="filepond">
</div>

<div>
    <label for="">Description</label>
    <textarea name="description" id="" cols="30" rows="10"> <%= book.description %> </textarea>
</div>